@model WebsiteBanHang.Context.Sanpham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
    <span style="color: red ">@TempData["Thongbao"]</span>
</div>
<h2>Thêm mới</h2>

