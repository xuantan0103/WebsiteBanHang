<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Trang Chủ</title>
    <div>
        <img class="img-responsive" src="~/images/33ip13-21-.png" />
    </div>

    @*<link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">*@

    <!-- jQuery -->
    <script src="~/Scripts/js/jquery-2.0.0.min.js" type="text/javascript"></script>
    @*chi tiết sản phẩm*@
    <link href="~/Content/css/product.css" rel="stylesheet" />
    <!-- Bootstrap4 files-->
    <script src="~/Scripts/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet" />

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Scripts/js/script.js" type="text/javascript"></script>
</head>
<body>
    @{ var u = Session["use"] as WebsiteBanHang.Context.Nguoidung; }
    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="~/Home/Index" class="brand-wrap">
                            <img class="logo" src="~/images/logo-shop-dien-thoai-7.jpg">
                        </a> <!-- brand-wrap.// -->
                    </div>

                    <div class="col-xl-6 col-lg-5 col-md-6">
                        @using (Html.BeginForm("Index", "ListSanpham", FormMethod.Get))
                        {
                            <form action="#" class="search-header">
                                <div class="input-group w-100">
                                    <input name="search" type="text" class="form-control" placeholder="Tìm kiếm Sản phẩm" value="@ViewBag.CurrenFiler">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa fa-search"></i> Tìm kiếm
                                        </button>
                                    </div>
                                </div>
                            </form> <!-- search-wrap .end// -->
                        }
                    </div> <!-- col.// -->

                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            <div class="widget-header mr-3">
                                @{ if (u != null)
                                    {
                                        <div class="col-sm-4 col-md-0">
                                            Xin chào : @u.Email
                                            &nbsp;
                                            @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                                            <a style="color:red" href="~/Home/DangXuat"> ĐĂNG XUẤT</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <a style="color:black" href="~/Home/Dangnhap"> Đăng nhập</a>
                                        <span>||</span>
                                        <a style="color:black" href="~/Home/Dangky"> Đăng ký</a>

                                    }
                                }
                            </div>
                        </div>
                        <div class="container">
                            <div class="widget-header">
                                @Html.Action("GioHangPartial", "Giohang", new { @class = "widget-view" })

                            </div>
                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->


        <nav class="navbar navbar-main navbar-expand-lg border-bottom">
            <div class="container">
                <div class="collapse navbar-collapse" id="main_nav">
                    <a href="~/Home/index"> Trang chủ</a>
                    <div>
                            <img class="img-responsive" src="~/images/km.jpeg" />
                    </div>
                </div> <!-- collapse .// -->

            </div> <!-- container .// -->
        </nav>
    </header> <!-- section-header.// -->
    @RenderBody()
    <hr />
    <div>
        <img class="img-responsive" src="~/images/web-fold-filp-03.jpg" />
    </div>
    <div>
        <img class="img-responsive" src="~/images/33ip13-21-.png" />
    </div>
    <br />
    </div>
    <footer class="bg-info" style="padding-left:50px">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <h2>Bảo hành</h2>
                <span>Chính sách mua hàng</span>
                <br />
                <span>Chính sách bảo hành</span>
                <br />
                <span>Trung tâm bảo hành</span>
                <br />
                <span>Tra cứu bảo hành</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Liên kết</h2>
                <span>Tin tức Mobile</span>
                <br />
                <span>Công Nghệ Net</span>
                <br />
                <span>GenzVN</span>
                <br />
                <span>Dân trí</span>


            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Thông tin</h2>
                <span>Về chúng tôi</span>
                <br />
                <span>Liên hệ</span>
                <br />
                <span>Góp ý</span>
                <br />
                <span>Tra cứu</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Theo dõi</h2>
                <span>Kênh youtube</span>
                <br />
                <span>Fanpage</span>
                <br />
                <span>Shopee</span>
                <br />
                <span>Group</span>

            </div>
        </div>
        <hr />
        <center> <p class="bg-primary">&copy; @DateTime.Now.Year - Phạm Xuân Tân & Nguyễn Bá Tín</p></center>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
